{
  "compilerOptions": {
    "rootDir": "./",
    "baseUrl": "./",
    "outDir": "dist",
    "sourceMap": false,
    "target": "esNext",
    "module": "esNext",
    "moduleResolution": "node",
    "allowJs": false,
    "strict": true,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": false,
    "paths": {
      "@internal/*": ["internal/*"],
    }
  },
  "exclude": ["node_modules", "**/node_modules/*"],
  "include": [
    "internal",
    "packages",
    "typings"
  ]
}
